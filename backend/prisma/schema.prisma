// This is your Prisma schema file

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id             String   @id @default(uuid())
  email          String?  @unique
  password       String?
  name           String?
  isGuest        Boolean  @default(false)
  accountPurpose String?  // 'legal', 'school', 'work', 'custom'
  createdAt      DateTime @default(now())

  tasks              Task[]
  documents          Document[]
  folders            Folder[]
  tags               Tag[]
  pushSubscription   PushSubscription[]
  calendarConnection CalendarConnection?
}

model PushSubscription {
  id        String   @id @default(uuid())
  userId    String
  endpoint  String
  p256dh    String
  auth      String
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@unique([userId, endpoint])
}

model Task {
  id                    String       @id @default(uuid())
  userId                String
  title                 String
  description           String?
  dueAt                 DateTime?
  status                String       @default("pending")
  category              String       @default("other")
  sourceType            String       @default("text")
  googleEventId         String?
  requiresClarification Boolean      @default(false)
  isRecurring           Boolean      @default(false)
  recurrenceInterval    String?      // 'daily', 'weekly', 'monthly', 'yearly'
  recurrenceSeriesId    String?      // Links all tasks in a recurring series
  createdAt             DateTime     @default(now())
  updatedAt             DateTime     @updatedAt

  user     User         @relation(fields: [userId], references: [id])
  subtasks Subtask[]
  folders  TaskFolder[]
  taskTags TaskTag[]
}

model Subtask {
  id         String  @id @default(uuid())
  taskId     String
  label      String
  done       Boolean @default(false)
  orderIndex Int     @default(0)

  task Task @relation(fields: [taskId], references: [id], onDelete: Cascade)
}

model Folder {
  id        String       @id @default(uuid())
  name      String
  icon      String?
  color     String?
  isSystem  Boolean      @default(false)
  userId    String
  createdAt DateTime     @default(now())

  user  User         @relation(fields: [userId], references: [id])
  tasks TaskFolder[]

  @@unique([userId, name])
}

model TaskFolder {
  id         String  @id @default(uuid())
  taskId     String
  folderId   String
  confidence Float   @default(1.0)

  task   Task   @relation(fields: [taskId], references: [id], onDelete: Cascade)
  folder Folder @relation(fields: [folderId], references: [id], onDelete: Cascade)

  @@unique([taskId, folderId])
}

model CalendarConnection {
  id           String   @id @default(uuid())
  userId       String   @unique
  provider     String   @default("google") // enum 'google'
  accessToken  String
  refreshToken String
  expiresAt    DateTime

  user User @relation(fields: [userId], references: [id])
}

model Document {
  id        String   @id @default(uuid())
  userId    String
  type      String   @default("generic")
  storageUrl String
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id])
}

model Tag {
  id        String    @id @default(uuid())
  name      String
  color     String?   // hex color for UI
  userId    String
  createdAt DateTime  @default(now())

  user     User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  taskTags TaskTag[]

  @@unique([userId, name])
}

model TaskTag {
  id     String @id @default(uuid())
  taskId String
  tagId  String

  task Task @relation(fields: [taskId], references: [id], onDelete: Cascade)
  tag  Tag  @relation(fields: [tagId], references: [id], onDelete: Cascade)

  @@unique([taskId, tagId])
}
